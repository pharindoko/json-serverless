{
  "compilerOptions": {
    "incremental": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2019",
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "./src",
    "composite": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "lib": ["es2015"],
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests"]
}
