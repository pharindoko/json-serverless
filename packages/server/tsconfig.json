{
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "lib": ["es2015"],
    "sourceMap": false,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/validations/requestschema.json"],
  "exclude": ["tests"]
}
