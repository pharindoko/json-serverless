{
  "compilerOptions": {
    "incremental": false,
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "composite": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "lib": ["es2015"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
